        "@types/jsonwebtoken": "^8.3.8",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.3",
        "express-limiter": "^1.6.1",
        "express-rate-limit": "^5.1.1",
        "helmet": "^3.22.0",
        "jsonwebtoken": "^8.5.1",
        "sqlite3": "^4.1.1",
        "ts-node": "^8.8.1",
        "typeorm": "^0.2.24",
        "typescript": "^3.8.3"
    },
    "devDependencies": {
        "@types/chai": "^4.2.11",
